<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

     <!-- Bootstrap CSS -->
     <link href="/bootstrap-5.2.3-dist/css/bootstrap.min.css" rel="stylesheet">
     <link rel="stylesheet" href="/fontawesome-free-6.4.0-web/css/all.css">
     <link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.css">
     <link rel="stylesheet" href="/css/style.css">
     <link rel="stylesheet" href="/css/sign-up.css">
     <link rel="stylesheet" href="/css/doc-pfp.css">

</head>

<body>

    <%- include("partials/header"); -%>

  <main>
    <div class="container-fluid">
        <h2>
            تعديل البيانات الشخصية
        </h2>

        <img src="/img/doc3.png" alt="" class="pfpImage">
        <p class="pfp-p">
            رفع صورة شخصية
        </p>

        <div class="row">
            <div class="col-6">
                <label for="">الاسم الاول</label>
                <input type="text" id="first_name" name="firstName">
            </div>
            <div class="col-6">
                <label for="">الاسم الاخير</label>
                <input type="text" id="last_name" name="lastName">
            </div>
        </div>
        <div class="row">
            <label for="" class="email">البريد الاكتروني او رقم الهاتف</label>
            <input type="email" id="email" name="email">
        </div>
        <div class="row">
            <div class="col-6">
                <label for=""> اضاقة شهادة الزمالة </label>
                <input type="file" id="cirt" name="cirt">
            </div>
            <div class="col-6">
                <label for="">اضافة خبرات سابقة </label>
                <input type="file" id="exprince">
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="">اضافة نبذة شخصية</label>
             <textarea name="" id="" cols="30" rows="10"></textarea>
            </div>
            <div class="col-6">
                <label for="">اضافة صورة البطاقة الشخصية </label>
                <input type="file" id="id-img" name="dateOfBirth">
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="">كلمة المرور</label>
                <input type="password" id="password" name="password">
            </div>
            <div class="col-6">
                <label for="">تأكيد كلمة المرور</label>
                <input type="password"id='password_repeat' name="confirmPassword">
            </div>
        </div>
        <div class="buttons">
            <button class="btn-2" id="sing_up">
                <a href="/questions">
                    حفظ
                </a>
              </button>
            <button class="btn-1">
                الغاء
            </button>
        </div>

    </div>
  </main>
<!--footer-->

<%- include("partials/footer"); -%>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
    <script src="/bootstrap-5.2.3-dist/js/bootstrap.min.js" ></script>
   <script src="/js/sing-up.js"></script>
   <script src="/js/doc-dash-link.js"></script>
</body>

</html>